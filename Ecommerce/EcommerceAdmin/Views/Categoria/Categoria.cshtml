@model Models.Categoria
@{
    ViewBag.Title = "Categoria";
}

<div class="row">
    <h3>Categoria</h3>
</div>
<br />
<div class="row">
    <a href="/Categoria/Categorias" class="btn btn-default">Retornar</a>
</div>
<br />
<h5 style="color:red">@ViewBag.Erro</h5>
@using (Html.BeginForm("Categoria", "Categoria", FormMethod.Post))
{
    <div class="row">
        <div class="col-sm-4">
            @if (Model.DataDesabilitado != null)
            {
                <div class="form-group">
                    <label>Data Desabilitado: </label><span>@{((DateTime)Model.DataDesabilitado).ToString("dd/MM/aaaa");}</span>
                </div>
            }
            <div class="form-group">
                <label>Codigo: </label>@if (Model.CodCategoria > 0)
                {<span>@Model.CodCategoria</span>}
            </div>
            <input type="hidden" name="CodCategoria" value="@Model.CodCategoria" />
            <div class="form-group">
                <label>Nome do Categoria</label>
                <input type="text" class="form-control" name="Nome" value="@Model.Nome" maxlength="200">
            </div>
            <div class="form-group">
                <label>Descrição</label>
                <textarea class="form-control" rows="3" name="Descricao" maxlength="500">@Model.Descricao</textarea>
            </div>
            @if (Model.CodCategoria > 0)
            {
                <a onclick="Remover(@Model.CodCategoria)" class="btn btn-danger">X</a>
            }
            <input type="submit" class="btn btn-default" value="Salvar" />
        </div>
    </div>
}

@section scripts{
    <script>
        function Remover(cod) {
            if (confirm('Tem certeza que deseja remover?'))
                window.location.href='../Categoria/Remover?codCategoria='+cod;
        }
    </script>
}
